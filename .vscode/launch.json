{
    "configurations": [
        //cmake then make in build folder
        {
            "name": "dxdiag",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/dxdiag",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/build/opendx/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "Build C++ Project"
        },

        //sample (also in build folder)
        {
            "name": "sample",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/opendx/bin/sample",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/build/opendx/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "Build C++ Project"
        }
    ],
    "version": "2.0.0"
}